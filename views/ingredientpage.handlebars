<div class="container">
    <h1 class="ingredient-title">INGREDIENT TITLE</h1>
    <p class="ingredient-text">serving size</p>
    <h3 class="ingredient-header">INGREDIENTS</h3>
    <div class="ingredients-list ingredient-text">
        {{#each ingredients}}
            <div class="row">
                <div class="col-sm-1">
                    <i class="glyphicon glyphicon-ok"></i>
                </div>
                <div class="col-sm-11 ingredientChecklist">
                    {{this.ingredient_info}}
                </div>
            </div>
        {{/each}}
    </div>
    <h3 class="ingredient-header">DIRECTIONS</h3>
    <p class="ingredient-text">
        {{#each instructions}}
            <div class="row">
                <div class="col-sm-11">
                    {{this.instruction_info}}
                </div>
            </div>
        {{/each}}
    </p>
    <button class="btn ingredient-btn recipeEdit" type="button">EDIT</button>
    <button class="btn ingredient-btn recipeDelete" type="button">DELETE</button>
    <button class="btn ingredient-btn" type="button">COMPLETE</button>
</div>