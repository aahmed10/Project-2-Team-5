<nav class="navbar navbar-user">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand navbar-brand-user" id="navbarlogo" href="#">Recipeasy</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="navtext navbar-right-user">LOGOUT</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <form>
        <div class="input-group searchaddbar">
            <input type="text" class="form-control input-md" placeholder="Search Your Recipe" />
            <span class="input-group-btn">
                <button class="btn btn-info btn-md" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </form>
    <form action="/api/recipe" method="POST">
        <div class="input-group searchaddbar">
            <input type="text" id="recipe_url" name="recipe_url" class="form-control input-md" placeholder="Recipe URL" />
            <span class="input-group-btn">
                <button class="btn btn-info btn-md" id="submit-button" value="Submit" type="submit">
                    <i class="glyphicon glyphicon-plus"></i>
                </button>
            </span>
        </div>
    </form>
    <div class="needtocook">
        <h2 class="table-header">
            <img src="assets/images/eggbowl.png" class="table-icon">NEED TO COOK</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>TITLE</th>
                    <th>SOURCE</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                {{recipes.recipe_name}}
                {{#each recipes}}
                <tr>
                    <td><a>{{this.recipe_name}}</a></td>
                    <td>{{this.recipe_url}}</td>
                    <td>
                        <a id="recipeDelete">delete</a>
                        <a id="recipeEdit">edit</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="recipescomplete">
        <h2 class="table-header">
            <img src="assets/images/utensils.png" class="table-icon">RECIPES COMPLETE</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>TITLE</th>
                    <th>SOURCE</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
                {{recipes.recipe_name}}
                {{#each recipes}}
                <tr>
                    <td class="recipeName"><a>{{this.recipe_name}}</a></td>
                    <td>{{this.recipe_url}}</td>
                    <td>
                        <a id="recipeDelete">delete</a>
                        <a id="recipeEdit">edit</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>